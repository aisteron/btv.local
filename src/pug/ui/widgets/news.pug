.widget.news
	
	.header
		h2 Новости
		if title == 'Index'
			a.arrowLink(href="/news.html")
				span Смотреть все
				img(src="/assets/img/icons/arrowLink.svg" width="59" height="13")
	if title == 'Index'
		.swiper.news
			.swiper-wrapper
				each key, val in data
					+article(key.img, key.title, key.excerpt, key.date)
	else
		.articles
			each key, val in data
				+article(key.img, key.title, key.excerpt, key.date)

	.swiper-nav
		.pagination
		.arrows
			img.prev(src="/assets/img/icons/fat_chevron.svg" width="23" height="22")
			img.next(src="/assets/img/icons/fat_chevron.svg" width="23" height="22")
